{
  "manifest_version": 3,
  "name": "Portfolio Impact Analyzer",
  "version": "1.0",
  "description": "Analyze how current webpage content affects your Yahoo Finance portfolio using AI",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "cookies",
    "sidePanel"
  ],
  "host_permissions": [
    "https://finance.yahoo.com/*",
    "https://*.finance.yahoo.com/*",
    "https://query1.finance.yahoo.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_title": "Portfolio Impact Analyzer"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}